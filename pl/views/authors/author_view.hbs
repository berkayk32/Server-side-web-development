
{{#if session.loggedIn}}
    <div id="book_info">
        <div>First Name: {{author.firstName}}</div>
        <div>First Name: {{author.lastName}}</div>
        <div>Birth Year: {{author.birthYear}}</div>
    </div>
    {{#hasAdminRights session.authorityId}}
        <a href="./edit/{{author.Id}}"><input type="submit" value="Edit"></a>
    {{/hasAdminRights}}


    {{#hasAdminRights session.authorityId}}
        <form action="/authors/addBook" method="POST">
            <input name="bookISBN" placeholder="ISBN" required="true">
            <input name="authorId" value="{{author.Id}}" hidden="true">
            <button>Add book.</button>
        </form>
    {{/hasAdminRights}}

    {{#if author.books}}
        {{#each author.books}}
            <option value="{{this.ISBN}}">{{this.ISBN}} / {{this.title}} </option>
            <a href="/books/{{this.ISBN}}"><input type="submit" value="Go"></a>
        {{/each}}
    {{/if}}
{{/if}}
