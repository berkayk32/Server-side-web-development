{{#if session.loggedIn}}
    <form action="/books/edit/{{book.ISBN}}" method="POST">
        <div id="book_info">
            ISBN<br>
            <input type="text" name="ISBN" value="{{book.ISBN}}"><br>
            Title<br>
            <input type="text" name="title" value="{{book.title}}"><br>
            Signum: <br>
             {{> classifications}}<br>
            Year<br>
            <input type="text" name="publicationYear" value="{{book.publicationYear}}"><br>
            Info<br>
            <input type="text" name="publicationInfo" value="{{book.publicationInfo}}"><br>
            Pages<br>
            <input type="text" name="pages" value="{{book.pages}}">
            <input type="hidden" name="_csrf" value="{{_csrf}}">
            
            {{#hasAdminRights session.authorityId}}
                <br>
                <input type="submit" value="Submit">
            {{/hasAdminRights}}
            
        </div>
        
    </form>
{{/if}}
