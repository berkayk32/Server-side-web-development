<form action="../edit/{{ISBN}}" method="POST">
    <div id="book_info">
       ISBN <input type="text" name="ISBN" value="{{ISBN}}">
       Title <input type="text" name="title" value="{{title}}">
        {{#if signId}}
       Signum     <input type="text" name="signum" value="{{signId.signum}}">
        {{/if}}
      Year  <input type="text" name="publicationYear" value="{{publicationYear}}"> 
        Info<input type="text" name="publicationInfo" value="{{publicationInfo}}">
      Pages  <input type="text" name="pages" value="{{pages}}">
    </div>
<input type="submit" value="Submit">
</form>

