{{> pagination}}
{{> search}}

{{#if session.loggedIn}}
    <form action="/books/create" method="GET">
        <button type="submit">Create Book</button>
    </form>
{{/if}}

{{#each books}}
<div id="wrapper">
    <div id="book_info">
        <a href="/books/{{ISBN}}">
            <div>ISBN: {{ISBN}}</div>
            <div>Title: {{title}}</div>
            <div>publicationYear: {{publicationYear}}</div>
            <div>Pages: {{pages}}</div>
        </a>
    </div>
    
    {{#hasAdminRights ../session.authorityId}}
    <div id="rightContent">
        <div id="deleteButton">
            <form action="/books/delete/{{ISBN}}" id="deleteForm" method="post">
                <button type="submit" > <i class="fas fa-trash-alt"></i></button>
            </form>
        </div>
        <div id="editButton">
            <form action="/books/edit/{{ISBN}}" method="GET">
                <button type="submit" value="Edit"><i class="fas fa-edit"></i></button>
            </form>
        </div>
    </div>
    {{/hasAdminRights}}
</div>
{{/each}}

{{> pagination}}
