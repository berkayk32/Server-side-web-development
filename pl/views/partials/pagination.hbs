
<pagination>
    {{#if pages.firstPage}}
        {{#if searchString}}
            <li class="pageNumber" id="pageLast">
                <a href="/books?currentPage={{pages.firstPage}}&searchString={{searchString}}">Last Page</a>
            </li>
        {{else}}
            <li class="pageNumber" id="pageLast">
                <a href="/books?currentPage={{pages.firstPage}}">Last Page</a>
            </li>
        {{/if}}
    {{/if}}

    <ul>
        {{#each pages.pageList}}
            {{#if this.isCurrent}}
                {{#if ../searchString}}
                    <li class="pageNumber" id="pageCurrent">
                        <a href="/books?currentPage={{this.value}}&searchString={{../searchString}}">{{this.value}}</a>
                    </li>
                {{else}}
                    <li class="pageNumber" id="pageCurrent">
                        <a href="/books?currentPage={{this.value}}">{{this.value}}</a>
                    </li>
                {{/if}}
            {{else}}
                {{#if ../searchString}}
                    <li class="pageNumber" >
                        <a href="/books?currentPage={{this.value}}&searchString={{../searchString}}">{{this.value}}</a>
                    </li>
                {{else}}
                    <li class="pageNumber" >
                        <a href="/books?currentPage={{this.value}}">{{this.value}}</a>
                    </li>
                {{/if}}
                
            {{/if}}
        {{/each}}
    </ul>

    {{#if pages.lastPage}}
            {{#if searchString}}
            <li class="pageNumber" id="pageLast">
                <a href="/books?currentPage={{pages.lastPage}}&searchString={{searchString}}">Last Page</a>
            </li>
        {{else}}
            <li class="pageNumber" id="pageLast">
                <a href="/books?currentPage={{pages.lastPage}}">Last Page</a>
            </li>
        {{/if}}
    {{/if}}
</pagination>